(* Lexer para Gram√°tica No. 4 *)

(* Introducir cualquier header aqui *)

let delim = ['\s' '\t' '\n']
let ws = delim+
let letter = ['A'-'Z' 'a'-'z']
let str = (_)*
let digit = ['0'-'9']
let digits = digit+
let id = letter(letter|str|digit)*
let number = digits(digits)?(E['+' '-']?digits)?
let condition = ['if' 'else']
let loop = ['while' 'for']

rule tokens = 
  | ws
  | condition { print("Token: CONDITION") }
  | loop      { print("Token: LOOP") }
  | id        { print("Token: ID") } 
  | number    { print("Token: NUMBER") }
  | (;)       { print("Token: SEMICOLON") }
  | (:=)      { print("Token: ASSIGNOP") }
  | (<)       { print("Token: LT") }
  | (=)       { print("Token: EQ") }
  | (+)       { print("Token: PLUS") }
  | (-)       { print("Token: MINUS") }
  | (*)       { print("Token: TIMES") }
  | (/)       { print("Token: DIV") }

